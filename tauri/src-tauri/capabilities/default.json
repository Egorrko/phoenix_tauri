{
  "identifier": "default",
  "description": "Default capabilities for Phoenix Tauri desktop app",
  "windows": ["*"],
  "permissions": [
    "core:default",
    "opener:default",
    "shell:allow-spawn",
    "shell:allow-stdin-write",
    {
      "identifier": "shell:allow-execute",
      "allow": [
        {
          "name": "phoenix_tauri_backend",
          "cmd": "",
          "args": true,
          "sidecar": true
        }
      ]
    }
  ]
}
